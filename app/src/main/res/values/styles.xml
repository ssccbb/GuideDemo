<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Dialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <declare-styleable name="PagerIndicatorView">
        <attr name="indicator_count" format="integer"/>
    </declare-styleable>
    <declare-styleable name="VariableDirectionProgressbar">
        <attr name="progress_direction" format="integer"/>
        <attr name="progress_front_color" format="color"/>
        <attr name="progress_behind_color" format="color"/>
        <attr name="progress_thumb_color" format="color"/>
        <attr name="total_progress" format="integer"/>
        <attr name="progress" format="integer"/>
        <attr name="thumb_visble" format="boolean"/>
        <attr name="thumb_width" format="integer"/>
    </declare-styleable>
</resources>
